{
  "name": "Validator-Back",
  "author": {
    "name": "Morgan Fromentin"
  },
  "description": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"target\": \"es2017\", \"module\": \"commonjs\"}' node node_modules/mocha/bin/_mocha --require ts-node/register 'src/**/*.spec.ts'",
    "test:coverage": "env TS_NODE_COMPILER_OPTIONS='{\"target\": \"es2017\", \"module\": \"commonjs\"}' node node_modules/nyc/bin/nyc --reporter=text node_modules/mocha/bin/_mocha --require ts-node/register 'src/**/*.spec.ts'"
  },
  "dependencies": {
    "@nestjs/common": "10.2.10",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "10.2.10",
    "@nestjs/platform-express": "10.2.10",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "helmet": "^7.1.0",
    "moment": "^2.30.1",
    "nest-winston": "^1.9.4",
    "reflect-metadata": "0.1.13",
    "rimraf": "5.0.5",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "10.2.1",
    "@nestjs/schematics": "10.0.3",
    "@nestjs/testing": "10.2.10",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.11",
    "@types/multer": "1.4.11",
    "@types/node": "20.8.7",
    "@types/supertest": "2.0.16",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "8.42.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "jest": "29.7.0",
    "prettier": "3.0.3",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
